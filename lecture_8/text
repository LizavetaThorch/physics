import numpy as np
import matplotlib.pyplot as plt

t = np.arange(0.00, 5.01, 0.005)
n = len(t)
dt = 0.005

# Constants
k1 = 50.0
k2 = 100.0
k3 = k1 + k2
m = 0.5
mu = 0.3
g = 9.8


# position and velocity
x = [0.0]*n
v = [0.0]*n

x[0] = 0.15

for i in range (len(t) - 1):
  if v[i] != 0:
    v_s = v[i]/np.sqrt(v[i]**2)
  if v[i] == 0:
    v_s = 0
  v[i+1] = -((k3/m)*x[i] + mu * g*v_s)*dt + v[i]
  x[i+1] = v[i+1]*dt + x[i]


plt.plot(t, v)
plt.plot(t, x)
plt.show()
